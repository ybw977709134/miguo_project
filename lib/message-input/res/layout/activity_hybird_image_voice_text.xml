<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    android:orientation="vertical" >
    
    <!-- 头文件 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/messages_bg_navbar" >
        
        <ImageButton
            android:id="@+id/imageButton_hybird_image_voice_text_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:onClick="clickButton"
            android:background="@null"
            android:src="@drawable/nav_back_selector" />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/libmsg_white"
            android:textSize="20sp"
            android:text="图文音消息"/>
        
         <TextView 
            android:id="@+id/textView_hybird_image_voice_text_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="clickButton"
            android:layout_marginRight="10dp"
            android:textColor="@color/libmsg_white"
            android:textSize="20sp"
            android:text="预览"/>
        
    </RelativeLayout>
    
    <EditText 
        android:id="@+id/editText_hybird_image_voice_text_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/libmsg_white"
        android:gravity="top"
        android:hint="写下要分享的故事"
        android:lines="6"/>
    
    <!-- 上传图片 -->
    <LinearLayout 
        android:id="@+id/layout_hybird_image_voice_text_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/libmsg_white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >
        
       <ImageView 
           android:id="@+id/imageView_hybird_image_voice_text_upload"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:onClick="clickButton"
           android:src="@drawable/share_new_add_photo"/>
        
        <TextView 
            android:id="@+id/textView_hybird_image_voice_text_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/libmsg_black"
            android:clickable="true"
            android:onClick="clickButton"
            android:text="选择图片"
            />
            
        
    </LinearLayout>
    
    <!-- 录音部分 -->
    <LinearLayout 
        android:id="@+id/layout_hybird_image_voice_text_record"
        android:layout_width="wrap_content"
        android:layout_height="30dp"       
        android:background="@color/libmsg_white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="clickButton"
        android:orientation="horizontal" >
        <!-- 录音标志图片 -->
        <ImageView
            android:id="@+id/imageView_hybird_image_voice_text_record"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/messages_icon_more_voice" />
        
        <!-- 按下录音（最大120秒）/点击结束录音  -->
        <TextView 
            android:id="@+id/textView_hybird_image_voice_text_recorddown" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/libmsg_gray"
            android:clickable="true"
            android:onClick="clickButton"
            android:text="按下录音（最大120秒）" />
        
        <!-- 录音时间 -->
        <TextView
            android:id="@+id/textView_hybird_image_voice_text_recordtime" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/libmsg_gray"
            android:text="录音时间"
            android:visibility="gone" />
        
        
        <TextView 
            android:id="@+id/textView_hybird_image_voice_text_endrecordsound" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/libmsg_gray"
            android:clickable="true"
            android:onClick="clickButton"
            android:visibility="gone"
            android:text="点击结束录音" />
    
    </LinearLayout>
    
     <!-- 录音结束部分 -->  
    <LinearLayout 
        android:id="@+id/layout_hybird_image_voice_text_endrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"               
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="clickButton"
        android:visibility="gone"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:id="@+id/layout_hybird_image_voice_text_endrecord_time" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/libmsg_white" >
         <!-- 播放图标 -->   
        <ImageView
            android:id="@+id/imageView_hybird_image_voice_text_record_play"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="clickButton"
            android:src="@drawable/timeline_play" />
        <!-- 显示录音的时间 -->
        <TextView 
            android:id="@+id/textView_hybird_image_voice_text_endrecordtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/libmsg_gray"
            android:text="录音的时间" />   
            
        </LinearLayout>
        
		<!-- 取消按钮 -->
        <ImageView
            android:id="@+id/imageView_hybird_image_voice_text_endrecord_cancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/libmsg_white"
            android:layout_marginLeft="10dp"
            android:onClick="clickButton"
            android:src="@drawable/icon_cancel" />
        
    </LinearLayout>

</LinearLayout>