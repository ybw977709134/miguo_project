<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextGrid">
        <!-- drawable res id -->
	    <attr name="cellBackground" format="integer"></attr>
	    <attr name="textColor" format="color"></attr>
	    <attr name="cellHeight" format="dimension"></attr>
	    <attr name="padding" format="dimension"></attr>
	    <attr name="paddingLeft" format="dimension"></attr>
	    <attr name="paddingTop" format="dimension"></attr>
	    <attr name="paddingRight" format="dimension"></attr>
	    <attr name="paddingBottom" format="dimension"></attr>
	    <!-- format="dimension" -->
	    <attr name="textSize"></attr>
	    <!-- vertical divider drawable -->
	    <attr name="verticalDivider" format="integer"/>
    </declare-styleable>
</resources>