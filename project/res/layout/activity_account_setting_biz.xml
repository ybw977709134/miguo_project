<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_dark" >
    <RelativeLayout 
        android:id="@+id/title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg">
        <ImageButton 
            android:id="@+id/title_back"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/nav_back_selector"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/settings_account"/>
    </RelativeLayout>
    <ScrollView 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/title_bar">
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="@dimen/setting_items_padding"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/settings_company_id"/>
                <TextView
                    android:id="@+id/txt_company"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_gray3"
                    android:textSize="18sp"
                    android:text="wowtech_inc"/>
            </LinearLayout>
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@drawable/divider"/>
            <LinearLayout
                android:id="@+id/layout_id"
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:clickable="true">
                <TextView 
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/settings_account_wowid"/>
                <TextView 
                    android:id="@+id/yuanqu_id_text"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_gray3"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_password"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/setting_items_padding"
            android:background="@drawable/table_white"
            android:orientation="horizontal"
            android:clickable="true">
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="@string/settings_account_pwd"/>
            <TextView
                android:id="@+id/pwd_text"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/table_arrow"
                android:textColor="@color/orange"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/setting_items_padding"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:text="@string/account_setting_text"/>
        <Button 
            android:id="@+id/btn_logout"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:background="@drawable/btn_red_selector"
            android:layout_marginLeft="@dimen/setting_items_padding"
            android:layout_marginRight="@dimen/setting_items_padding"
            android:layout_marginTop="@dimen/setting_items_padding"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/logout"/>
    </LinearLayout>
	</ScrollView>
</RelativeLayout>
