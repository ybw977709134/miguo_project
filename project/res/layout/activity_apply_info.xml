<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_dark">
    <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_height="@dimen/title_bar_height"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            style="?attr/navbar">
        <ImageButton
                android:id="@+id/title_back"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/nav_back_selector"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/title_group_apply"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_below="@+id/title_bar"
            android:padding="10dp"
            android:orientation="vertical">
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
            <org.wowtalk.ui.msg.RoundedImageView
                    android:id="@+id/img_photo"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/default_avatar_90"/>
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/txt_name"
                        android:layout_height="0dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                <TextView
                        android:layout_height="0dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="@string/contacts_apply_to_join_group"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/info_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@drawable/table_white"
                android:orientation="vertical">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:text="@string/contacts_newfriend_extra_info"/>
            <TextView
                    android:id="@+id/extra_info"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="top|left"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
        </LinearLayout>

        <Button
                android:id="@+id/btn_agree"
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_blue_selector"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/group_accept_member"/>
        <Button
                android:id="@+id/btn_decline"
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_gray_selector"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/group_reject_member"/>

    </LinearLayout>
</RelativeLayout>