<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark" >
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        style="?attr/navbar">
        <ImageButton
            android:id="@+id/navbar_btn_left"
            style="?attr/navbar_btn_left"
            android:src="@drawable/nav_back_selector"/>
        <TextView
            style="?attr/navbar_title"
            android:text="@string/contact_info_buddy_pageinfo"/>
    </RelativeLayout>

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="118dp"
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:padding="10dp">
                <FrameLayout
                    android:id="@+id/frame_photo"
                    android:layout_height="98dp"
                    android:layout_width="98dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true">
                    <co.onemeter.oneapp.ui.CircleImageView
                        android:id="@+id/img_thumbnail"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:src="@drawable/default_avatar_90" />
                    <!--
										<ImageView
											android:id="@+id/img_thumbnail"
											android:layout_height="match_parent"
											android:layout_width="match_parent"
											android:layout_gravity="center"
											android:layout_margin="5dp"
											android:scaleType="fitCenter"
											android:background="@drawable/default_avatar_90"/>
					 -->
                    <ImageView
                        android:id="@+id/avatar_bar"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"
                        android:background="@drawable/avatar_bar"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/avatar_gender"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="5dp"
                        android:background="@drawable/avatar_male"/>
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/layout_friend_biz"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_toRightOf="@+id/frame_photo">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/friend_name_biz"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            style="@style/standard_text"
                            android:singleLine="true"
                            android:text="name"/>

                        <TextView
                            android:id="@+id/friend_name_pronunciation"
                            style="@style/standard_text_gray"
                            android:layout_height="fill_parent"
                            android:layout_width="wrap_content"
                            android:text="pinyin"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/module_chat"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <ImageButton
                            android:id="@+id/btn_msg"
                            style="@style/button_blue"
                            android:layout_height="34dp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/profile_btn_message"/>
                        <ImageButton
                            android:id="@+id/btn_call"
                            style="@style/button_blue"
                            android:layout_height="34dp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/padding_medium"
                            android:src="@drawable/profile_btn_call"/>
                        <ImageButton
                            android:id="@+id/btn_video"
                            style="@style/button_blue"
                            android:layout_height="34dp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/padding_medium"
                            android:src="@drawable/profile_btn_video"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/status_layout"
                android:layout_height="@dimen/section_row_height"
                android:layout_width="fill_parent"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="center"
                android:background="@drawable/table_white"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_gray2"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="@string/signature"/>
                <co.onemeter.oneapp.utils.AlwaysMarqueeTextView
                    android:id="@+id/txt_status"
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dept_job"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="center|center_vertical|center_horizontal"
                android:background="@drawable/table_white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/dept_layout"
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/contactinfo_department"/>
                    <co.onemeter.oneapp.utils.AlwaysMarqueeTextView
                        android:id="@+id/txt_dept"
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:scrollHorizontally="true"/>
                    <!--
                    <TextView
                        android:id="@+id/txt_dept"
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                    -->
                </LinearLayout>
                <ImageView
                    android:id="@+id/divider_dept_job"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/divider"/>
                <LinearLayout
                    android:id="@+id/layout_job_title"
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/contactinfo_job_title"/>
                    <TextView
                        android:id="@+id/txt_job_title"
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_contact_way"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="@dimen/padding_medium"
                android:gravity="center|center_vertical|center_horizontal"
                android:background="@drawable/table_white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_phone"
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/contactinfo_phone"/>
                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/divider_phone_mobile"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/divider"/>
                <LinearLayout
                    android:id="@+id/layout_mobile"
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/contactinfo_mobile"/>
                    <TextView
                        android:id="@+id/txt_mobile"
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/divider_mobile_email"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/divider"/>
                <LinearLayout
                    android:id="@+id/layout_email"
                    android:layout_height="@dimen/section_row_height"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray2"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="@string/contactinfo_email"/>
                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_height="@dimen/section_row_height"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="17sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                style="@style/button_blue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_info_goto_moments"
                android:id="@+id/btn_goto_moments"
                android:layout_margin="@dimen/padding_medium"/>

            <Button
                style="@style/button_blue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_info_add_as_friend"
                android:id="@+id/btn_add"
                android:layout_margin="@dimen/padding_medium"/>
            
            <Button
                style="@style/button_blue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_info_edit_remarkname"
                android:id="@+id/btn_edit_remarkname"
                android:layout_margin="@dimen/padding_medium" />

            <Button
                style="@style/button_red"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_info_delete_friend"
                android:id="@+id/btn_delete"
                android:layout_margin="@dimen/padding_medium"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
