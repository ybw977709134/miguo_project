<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_light"
                android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="@dimen/login_logo_margin_top"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/login_logo"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/logo_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/login_logo_margin_bottom"
                android:textSize="25sp"
                android:textColor="@color/green"
                android:text="@string/logo_name"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_large"
                android:background="@color/white"
                android:orientation="vertical" >

                <ImageView
                    style="@style/standard_list_divider"/>

                <EditText
                    android:id="@+id/txt_invite_code"
                    style="@style/inputbox_borderless"
                    android:imeOptions="actionDone"
                    android:hint="@string/login_input_email"/>

                <ImageView
                    style="@style/standard_list_divider"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                style="@style/button_green"
                android:text="@string/login_retrieve_password_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_large"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
