<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:id="@+id/title_bar"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/title_bar_height"
			android:layout_alignParentTop="true"
			style="?attr/navbar">
			<ImageButton
				android:id="@+id/btn_add"
				android:layout_height="50dp"
				android:layout_width="50dp"
				android:layout_alignParentRight="true"
				android:background="@null"
				android:src="@drawable/nav_add_selector"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="@string/app_name"
				style="@style/page_title_dark"/>
		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/home_bg"
			android:orientation="horizontal">
			<ImageButton
				android:id="@+id/btn_myclasses"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:background="@null"
				android:src="@drawable/home_icon_my_class"/>
			<ImageButton
				android:id="@+id/btn_homework"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:background="@null"
				android:src="@drawable/home_icon_homework"/>
		</LinearLayout>

		<!-- buttons wrapper -->
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!-- 竖直分隔线 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:minHeight="160dp"
				android:paddingTop="@dimen/padding_medium"
				android:paddingBottom="@dimen/padding_medium"
				android:orientation="horizontal"
				android:id="@+id/linearLayout">
				<ImageView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"/>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:background="@drawable/timeline_divider_v"/>
				<ImageView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"/>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:background="@drawable/timeline_divider_v"/>
				<ImageView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"/>
			</LinearLayout>

			<!-- Row #1 -->
			<LinearLayout
				android:id="@+id/vg_btn_row1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="80dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/vg_study"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">
					<ImageButton
						android:id="@+id/btn_study"
						android:layout_width="@dimen/home_icon_size"
						android:layout_height="@dimen/home_icon_size"
						android:background="@null"
						android:src="@drawable/home_icon_expand_selector"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_gray2"
						android:text="@string/home_button_expand"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/vg_event"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">
					<ImageButton
						android:id="@+id/btn_event"
						android:layout_width="@dimen/home_icon_size"
						android:layout_height="@dimen/home_icon_size"
						android:background="@null"
						android:src="@drawable/home_icon_events_selector"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_gray2"
						android:text="@string/home_button_events"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/vg_grow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">
					<ImageButton
						android:id="@+id/btn_grow"
						android:layout_width="@dimen/home_icon_size"
						android:layout_height="@dimen/home_icon_size"
						android:background="@null"
						android:src="@drawable/home_icon_growupfiles_selector"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_gray2"
						android:text="@string/home_button_growupfiles"/>
				</LinearLayout>
			</LinearLayout>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/vg_btn_row1"
				android:paddingLeft="@dimen/padding_medium"
				android:paddingRight="@dimen/padding_medium"
				android:background="@drawable/timeline_divider_h"/>

			<!-- Row #2 -->
			<LinearLayout
				android:id="@+id/vg_btn_row2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="80dp"
				android:layout_below="@+id/vg_btn_row1"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/vg_bonus"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">
					<ImageButton
						android:id="@+id/btn_bonus"
						android:layout_width="@dimen/home_icon_size"
						android:layout_height="@dimen/home_icon_size"
						android:background="@null"
						android:src="@drawable/home_icon_gift_selector"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_gray2"
						android:text="@string/home_button_gift"/>
				</LinearLayout>
				<!-- dummy -->
				<!-- dummy -->
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:visibility="invisible"
					android:orientation="vertical"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:layout_above="@+id/linearLayout">
					<ImageButton
						android:layout_width="@dimen/home_icon_size"
						android:layout_height="@dimen/home_icon_size"
						android:background="@null"
						android:src="@drawable/home_icon_gift_selector"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_gray2"
						android:text="@string/home_button_gift"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:visibility="invisible"
					android:orientation="vertical">
					<ImageButton
						android:layout_width="@dimen/home_icon_size"
						android:layout_height="@dimen/home_icon_size"
						android:background="@null"
						android:src="@drawable/home_icon_gift_selector"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/text_gray2"
						android:text="@string/home_button_gift"/>
				</LinearLayout>
			</LinearLayout>

		</RelativeLayout>
	</LinearLayout>
</ScrollView>