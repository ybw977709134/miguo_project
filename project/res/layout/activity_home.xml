<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/bg_gray1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:id="@+id/title_bar"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/title_bar_height"
			android:layout_alignParentTop="true"
			android:background="@drawable/navbar_bg">
			<ImageButton
				android:id="@+id/title_back"
				android:layout_height="50dp"
				android:layout_width="50dp"
				android:layout_alignParentRight="true"
				android:background="@null"
				android:src="@drawable/nav_add_selector"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:textStyle="bold"
				android:text="@string/app_name"
				style="@style/page_title"/>
		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/home_bg"
			android:orientation="horizontal">
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:background="@null"
				android:src="@drawable/home_icon_my_class"/>
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:background="@null"
				android:src="@drawable/home_icon_homework"/>
		</LinearLayout>

		<!-- Row #1 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="@dimen/home_icon_size"
					android:layout_height="@dimen/home_icon_size"
					android:background="@null"
					android:src="@drawable/home_icon_expand_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/text_gray2"
					android:text="@string/home_button_expand"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="@dimen/home_icon_size"
					android:layout_height="@dimen/home_icon_size"
					android:background="@null"
					android:src="@drawable/home_icon_events_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/text_gray2"
					android:text="@string/home_button_events"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="@dimen/home_icon_size"
					android:layout_height="@dimen/home_icon_size"
					android:background="@null"
					android:src="@drawable/home_icon_growupfiles_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/text_gray2"
					android:text="@string/home_button_growupfiles"/>
			</LinearLayout>
		</LinearLayout>

		<!-- Row #2 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="@dimen/home_icon_size"
					android:layout_height="@dimen/home_icon_size"
					android:background="@null"
					android:src="@drawable/home_icon_gift_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/text_gray2"
					android:text="@string/home_button_gift"/>
			</LinearLayout>
			<!-- dummy -->
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:visibility="invisible"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="@dimen/home_icon_size"
					android:layout_height="@dimen/home_icon_size"
					android:background="@null"
					android:src="@drawable/home_icon_gift_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/text_gray2"
					android:text="@string/home_button_expand"/>
			</LinearLayout>
			<!-- dummy -->
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:visibility="invisible"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="@dimen/home_icon_size"
					android:layout_height="@dimen/home_icon_size"
					android:background="@null"
					android:src="@drawable/home_icon_gift_selector"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/text_gray2"
					android:text="@string/home_button_expand"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>