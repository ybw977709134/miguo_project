<?xml version="1.0" encoding="utf-8"?>
<org.wowtalk.ui.msg.HeightAwareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/navbar_bg" >

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/nav_back_selector" />

        <TextView
            android:id="@+id/target_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:layout_toRightOf="@id/img_back"
            android:layout_toLeftOf="@+id/img_more"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/message_history_title"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/img_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/nav_more_selector"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/message_history"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_bar"
        android:layout_above="@+id/divider_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:cacheColorHint="@null"
        android:dividerHeight="0dp">
    </ListView>
    <ImageView
        android:id="@+id/divider_img"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_above="@+id/bottom_page"
        android:background="#C2C2C2"/>
    <RelativeLayout
        android:id="@+id/bottom_page"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/first_page"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/history_first_selector"/>
        <ImageView
            android:id="@+id/previous_page"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/first_page"
            android:src="@drawable/history_pre_selector"/>
        <LinearLayout
            android:id="@+id/layout_page"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/previous_page"
            android:layout_toLeftOf="@+id/next_page"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:background="@drawable/sms_text_field"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/current_page"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black_30"
                android:textSize="16sp"
                android:maxLength="10"
                android:singleLine="true"
                android:paddingRight="2dp"
                android:text="1"
                android:background="@null"/>
            <TextView
                android:id="@+id/total_page"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="left"
                android:text="/1"
                android:textColor="@color/black_30"
                android:textSize="16sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/next_page"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/last_page"
            android:layout_marginRight="18dp"
            android:src="@drawable/history_next_selector"/>
        <ImageView
            android:id="@+id/last_page"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/history_last_selector"/>
    </RelativeLayout>
</org.wowtalk.ui.msg.HeightAwareRelativeLayout>
