<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background" >
	<RelativeLayout
		android:id="@+id/title_bar"
		android:layout_height="@dimen/title_bar_height"
		android:layout_width="fill_parent"
		android:layout_alignParentTop="true"
		style="?attr/navbar"
		android:focusable="true"
		android:focusableInTouchMode="true">
		<ImageButton
			android:id="@+id/title_back"
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:layout_alignParentLeft="true"
            android:background="@null"
			android:src="@drawable/nav_back_selector"/>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_centerInParent="true"
			android:lines="1"
            android:textStyle="bold"
			android:textSize="20sp"
			android:textColor="@color/white"
			android:text="@string/choose_contact"/>
	</RelativeLayout>
    <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/title_bar"
            android:orientation="vertical">
        <include layout="@layout/piece_filter_bar" />
    </LinearLayout>

	<ListView
		android:id="@+id/list_contact"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@id/searchLayout"
		android:layout_above="@+id/layout_bottom"
		android:divider="@null"
		android:cacheColorHint="@null"/>
    <ExpandableListView
        android:id="@+id/group_list_biz"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/searchLayout"
        android:layout_above="@+id/layout_bottom"
        android:groupIndicator="@drawable/group_indicator_selector"
        android:cacheColorHint="@null"
        android:visibility="gone"
        android:divider="@drawable/divider_320"
        android:childDivider="@drawable/divider_320"/>
	<RelativeLayout
		android:id="@+id/layout_bottom"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
        android:paddingRight="5dp"
		android:background="@drawable/select_contact_bar"
		android:gravity="center_vertical">
		<HorizontalScrollView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@+id/btn_ok"
			android:layout_centerVertical="true"
			android:scrollbars="none">
			<FrameLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">
				<GridView
					android:id="@+id/grid_selected"
					android:layout_height="60dp"
					android:layout_width="100dp"
					android:gravity="center"
					android:horizontalSpacing="5dp"
					android:stretchMode="spacingWidth"
					android:numColumns="auto_fit"/>
			</FrameLayout>
		</HorizontalScrollView>
		<Button
			android:id="@+id/btn_ok"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:background="@drawable/btn_blue_selector"
            android:textColor="@color/white"
            android:textSize="16sp"/>
	</RelativeLayout>

</RelativeLayout>
