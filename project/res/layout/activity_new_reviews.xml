<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	style="@style/page">

	<RelativeLayout
		android:id="@+id/title_bar"
		android:layout_height="50dp"
		android:layout_width="fill_parent"
		android:layout_alignParentTop="true"
		android:background="@drawable/navbar_bg">
		<ImageButton
			android:id="@+id/title_back"
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:layout_alignParentLeft="true"
			android:background="@null"
			android:src="@drawable/nav_back_selector"/>
		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/title_back"
			android:background="@drawable/navbar_div"
            android:visibility="gone"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_centerInParent="true"
			android:singleLine="true"
			android:textStyle="bold"
			android:textSize="20sp"
			android:textColor="@color/white"
			android:text="@string/friends_moment_reviews"/>

        <TextView
                android:id="@+id/title_del"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@drawable/clear_text_color_selector"
                android:text="@string/clear"/>
        <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/title_del"
                android:background="@drawable/navbar_div"
                android:visibility="gone"/>
	</RelativeLayout>
	<ListView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@android:id/list"
		android:cacheColorHint="@null"
		android:layout_below="@+id/title_bar"
		android:layout_gravity="left|center_vertical"
        android:divider="@color/color_cccccc"
            android:dividerHeight="2dp"/>

	<TextView
		android:id="@android:id/empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/moments_new_reviews_empty"
	    android:layout_centerInParent="true"/>
</RelativeLayout>