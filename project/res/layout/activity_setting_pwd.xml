<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray1" >
    <RelativeLayout 
        android:id="@+id/title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg">
        <ImageButton
            android:id="@+id/title_back"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/nav_back_selector"/>
        <ImageButton
            android:id="@+id/title_confirm"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/nav_confirm_selector"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/set_password"/>
    </RelativeLayout>
	
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="10dp"
                android:background="@drawable/table_white"
                android:orientation="vertical">
	            <LinearLayout
		            android:id="@+id/box_old"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent"
		            android:orientation="vertical">
		            <EditText
			            android:id="@+id/edt_old"
			            android:layout_height="45dp"
			            android:layout_width="fill_parent"
			            android:paddingLeft="10dp"
			            android:paddingRight="10dp"
			            android:singleLine="true"
			            android:inputType="textPassword"
			            android:background="@null"
			            android:hint="@string/input_old_login_password"/>
		            <ImageView
			            android:layout_height="wrap_content"
			            android:layout_width="fill_parent"
			            android:background="@drawable/divider"/>
	            </LinearLayout>
                <EditText
                	android:id="@+id/edt_pwd"
                	android:layout_height="45dp"
                	android:layout_width="fill_parent"
                	android:paddingLeft="10dp"
                	android:paddingRight="10dp"
                	android:singleLine="true"
                	android:inputType="textPassword"
                	android:background="@null"
                	android:hint="@string/input_login_password"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/divider"/>
                <EditText 
                    android:id="@+id/edt_confirm"
                    android:layout_height="45dp"
                    android:layout_width="fill_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:hint="@string/input_login_password_again"/>
            </LinearLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_gray3"
                android:textSize="15sp"
                android:text="@string/settingpassword_prompt_limit"/>
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>