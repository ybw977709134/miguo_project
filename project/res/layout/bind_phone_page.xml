<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        style="?attr/navbar">
        <ImageButton 
            android:id="@+id/title_back"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/nav_back_selector"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/bind_phone"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:background="@drawable/btn_white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="45dp"
                android:layout_width="fill_parent">
                <Button
                    android:id="@+id/btn_mcc"
                    android:layout_height="40dp"
                    android:layout_width="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    style="@style/button_blue"/>
                <EditText
                    android:id="@+id/mcc_text"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_toRightOf="@id/btn_mcc"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <ImageView
	            style="@style/standard_list_divider"/>
            <EditText
                android:id="@+id/edt_num"
                android:layout_height="45dp"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:inputType="phone"
                android:background="@null"
                android:hint="@string/input_your_phonenumber"/>
            <ImageView
	            style="@style/standard_list_divider"/>
        	<EditText
            	android:id="@+id/edt_pwd"
            	android:layout_height="45dp"
            	android:layout_width="fill_parent"
            	android:paddingLeft="10dp"
            	android:paddingRight="10dp"
            	android:singleLine="true"
            	android:inputType="textPassword"
            	android:background="@null"
            	android:hint="@string/input_your_password"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/bind_phone_msg"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="@string/bind_phone_msg"/>
        
       <Button 
           android:id="@+id/btn_confirm"
           android:layout_height="50dp"
           android:layout_width="fill_parent"
           android:layout_margin="10dp"
           style="@style/button_blue"
           android:text="@string/next_step"/>
    </LinearLayout>
</RelativeLayout>