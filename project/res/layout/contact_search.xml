<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white" >
	<RelativeLayout
		android:id="@+id/title_bar"
		android:layout_height="@dimen/title_bar_height"
		android:layout_width="fill_parent"
		android:layout_alignParentTop="true"
		style="?attr/navbar">

		<LinearLayout
		    android:id="@+id/layout_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:gravity="center_vertical"
		    android:orientation="horizontal"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:visibility="visible" >

			<include
			    android:id="@+id/relativeLayout01"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    layout="@layout/piece_search_bar" 
			    android:layout_weight="1"
			    />

            <TextView
                android:id="@+id/search_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/contacts_search_cancel"
                android:textSize="15sp"
                android:textColor="@color/white" 
                android:clickable="true"
                android:layout_weight="5"/>

		</LinearLayout>

	</RelativeLayout>

    <LinearLayout
            android:id="@+id/search_result_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_below="@+id/relativeLayout01"
            android:orientation="vertical"
            android:visibility="gone">
		<ScrollView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
            android:fadingEdge="none"
            android:scrollbars="none" >
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contacts_search_result_buddy" 
                    android:paddingLeft="10dp"
                    android:textSize="15dp"/>
                <ImageView
					android:layout_marginLeft="@dimen/padding_small"
					style="@style/standard_list_divider"/>             
                <ListView
                    android:id="@+id/list_buddy_find"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:divider="@drawable/table_divider_white"
                    android:cacheColorHint="@null"/>
                 <ImageView
					android:layout_marginLeft="@dimen/padding_small"
					style="@style/standard_list_divider"/>
                 <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contacts_search_result_group" 
                    android:textSize="15dp"
                    android:paddingLeft="10dp"/>
                 <ImageView
					android:layout_marginLeft="@dimen/padding_small"
					style="@style/standard_list_divider"/>
                <ListView
                    android:id="@+id/list_group_find"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:divider="@drawable/table_divider_white"
                    android:cacheColorHint="@null"/>
            </LinearLayout>
		</ScrollView>
    </LinearLayout>
