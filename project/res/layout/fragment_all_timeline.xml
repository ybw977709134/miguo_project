<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red">
	<com.handmark.pulltorefresh.library.PullToRefreshListView
		android:id="@+id/list"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@+id/title_bar"
		style="@style/page"
		ptr:ptrHeaderBackground="@color/wowtalk_darkgray"
		ptr:ptrAnimationStyle="rotate"
		ptr:ptrDrawable="@drawable/transparent_10x10"
		ptr:ptrHeaderTextColor="@color/text_orange"
		ptr:ptrHeaderSubTextColor="@color/transparent"
		ptr:ptrRefreshableViewMarginTop="0dp"
		ptr:ptrShowIndicator="false"
		android:listSelector="#00000000"
		android:fadingEdge="none"
		android:divider="@null"
		android:cacheColorHint="@null">
	</com.handmark.pulltorefresh.library.PullToRefreshListView>
	<RelativeLayout
		android:id="@+id/dialog_container"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#a0000000"
		android:layout_marginTop="0dp" >
	</RelativeLayout>
</RelativeLayout>