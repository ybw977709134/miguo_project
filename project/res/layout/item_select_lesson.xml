<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/textView_item_lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="dummytext"
            android:textColor="@color/black"
            android:layout_weight="20"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView_item_lesson_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="2015-01-01"
            android:textColor="@color/black"
            android:layout_weight="10"
            android:gravity="right"
            android:visibility="gone"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView_item_lesson_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_section_select"
            android:paddingRight="15dp"
            android:layout_weight="1"
            android:visibility="invisible"/>
    </LinearLayout>


</LinearLayout>