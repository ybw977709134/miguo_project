<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="10dp"
	android:paddingTop="5dp"
	android:paddingRight="10dp"
	android:paddingBottom="5dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/bg_gray1"
		android:padding="@dimen/padding_medium"
		android:orientation="vertical">
		<TextView
			android:id="@+id/event_title"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="dummy title"
			android:textColor="@color/text_gray1"
			android:textAppearance="@android:style/TextAppearance.Medium" />

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_marginRight="10dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="20dp">

			<ImageView
				android:id="@+id/event_photo"
				android:layout_height="100dp"
				android:layout_width="100dp"
				android:layout_marginRight="5dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:background="@drawable/feed_default_pic"/>


			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_toRightOf="@id/event_photo"
				android:layout_alignParentTop="true"
				android:orientation="vertical">

				<TextView
					android:id="@+id/event_time"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="dummy time"
					android:textColor="@color/text_gray2"
					android:textAppearance="@android:style/TextAppearance.Small" />

				<TextView
					android:id="@+id/event_place"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="dummy place"
					android:textColor="@color/text_gray2"
					android:textAppearance="@android:style/TextAppearance.Small" />

				<TextView
					android:id="@+id/event_category"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="dummy category"
					android:textColor="@color/text_gray2"
					android:textAppearance="@android:style/TextAppearance.Small" />

				<TextView
					android:id="@+id/event_host"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="dummy host"
					android:textColor="@color/text_gray2"
					android:textAppearance="@android:style/TextAppearance.Small" />

				<TextView
					android:id="@+id/event_count"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="dummy count"
					android:textColor="@color/text_gray2"
					android:textAppearance="@android:style/TextAppearance.Small" />

				<TextView
					android:id="@+id/event_introduce"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:text="dummy introduce"
					android:ellipsize="end"
					android:maxLines="2"
					android:textColor="@color/text_gray2"
					android:textAppearance="@android:style/TextAppearance.Small" />
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>
