<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/event_item_right_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/table_arrow"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/event_item_right_indicator"
                android:background="@color/white"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/event_title"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/event_txt_size_h1"/>

            <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="20dp">

                <ImageView
                        android:id="@+id/event_photo"
                        android:layout_height="100dp"
                        android:layout_width="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/feed_default_pic"/>


                <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/event_photo"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/event_time"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/event_blue"
                            android:textStyle="bold"
                            android:textSize="@dimen/event_txt_size_h2"/>

                    <TextView
                            android:id="@+id/event_place"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/event_txt_size_h3"/>

                    <TextView
                            android:id="@+id/event_count"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/event_txt_size_h3"/>

                    <TextView
                            android:id="@+id/event_introduce"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/event_txt_size_h3"
                            android:ellipsize="end"
                            android:maxLines="2"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
