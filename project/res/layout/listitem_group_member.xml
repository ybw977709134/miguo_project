<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/group_member_grid_width"
    android:layout_height="wrap_content" >
    <FrameLayout 
        android:id="@+id/frame"
        android:layout_height="@dimen/group_member_grid_width"
        android:layout_width="@dimen/group_member_grid_width"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">
	    <co.onemeter.oneapp.ui.CircleImageView
            android:id="@+id/img_thumbnail"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            corner_radius="@dimen/rounded_img_view_cornor_radius"
            android:src="@drawable/default_avatar_90"/>
        <TextView
            android:id="@+id/admin_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="@drawable/group_admin_bg1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/group_admin"/>
        <ImageView
            android:id="@+id/img_del"
            android:layout_height="29dp"
            android:layout_width="29dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/remove_icon"
            android:visibility="gone"/>
    </FrameLayout>
    <TextView 
        android:id="@+id/txt_name"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/frame"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="13sp"
        android:textColor="@color/text_gray1"/>

</RelativeLayout>