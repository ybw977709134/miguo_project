<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/padding_medium"
              android:paddingBottom="@dimen/padding_medium"
              android:background="@color/bg_color"
              android:orientation="vertical" >

	<ImageView
		style="@style/bg_section_divider_line_dark"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:padding="@dimen/padding_medium"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/standard_text_darkgray"
			android:text="School Name"
			android:id="@+id/txt_content"
			android:drawableLeft="@drawable/icon_school"
			android:drawablePadding="@dimen/padding_small"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginBottom="@dimen/padding_medium"/>

		<ImageView
			style="@style/bg_section_divider_line_light"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/padding_medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/standard_text_darkgray"
				android:text="课程（班级）"
				android:id="@+id/txt_classrooms"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/standard_text_darkgray"
				android:text="已加入"
				android:id="@+id/txt_status"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:paddingBottom="@dimen/padding_medium"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/text_gray2"
				android:text="2015-9-4"
				android:id="@+id/txt_date"
				android:layout_below="@id/txt_status"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true" />
		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/padding_large"
			android:id="@+id/vg_actions"
			android:gravity="right"
			android:orientation="horizontal">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:text="@string/reject"
				android:id="@+id/btn_reject"
				android:textColor="@color/red"
				android:textSize="@dimen/text_size_default"
				android:layout_marginRight="@dimen/padding_large"
				android:background="@drawable/btn_small_red_selector"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:text="@string/join"
				android:id="@+id/btn_accept"
				android:textColor="@color/blue"
				android:textSize="@dimen/text_size_default"
				android:background="@drawable/btn_small_blue_selector"/>
		</LinearLayout>

	</LinearLayout>

	<ImageView
		style="@style/bg_section_divider_line_dark"/>

</LinearLayout>
