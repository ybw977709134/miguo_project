<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray1"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg">
        <ImageButton
            android:id="@+id/title_back"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/nav_close_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="@string/manage_account_add"
            style="@style/page_title"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/layout_signup"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/login_bottom_font"
                    android:textSize="15sp"
                    android:text="@string/registered_account"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:background="@drawable/emoji_div_vertical"/>

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/layout_auto_register"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/login_bottom_font"
                    android:textSize="15sp"
                    android:text="@string/automatically_registered"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/bottomLayout"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/wowtalkforbiz_text"
                android:scaleType="centerInside"/>

            <!-- <TextView
                android:id="@+id/logo_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:text="@string/logo_name"/> -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/table_white"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/accountInput"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/login_icon_id"
                    android:drawablePadding="10dp"
                    android:textColor="@color/text_gray3"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:shadowColor="@color/white"
                    android:hint="@string/account_hint"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/divider"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <EditText
                        android:id="@+id/passWordInput"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:drawableLeft="@drawable/login_icon_password"
                        android:drawablePadding="10dp"
                        android:textColor="@color/text_gray3"
                        android:hint="@string/passWord_hint"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textSize="17sp" />
                    <ImageButton
                        android:id="@+id/field_clear"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_marginRight="7dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:background="@drawable/field_clear"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:paddingLeft="14dp"
                    android:paddingRight="7dp" >

                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_gray_selector"
                        android:shadowColor="@color/white_80"
                        android:shadowDy="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/registered_account"
                        android:textColor="@color/login_gray_btn_font"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp" >

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blue_selector"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="10dp"
                        android:shadowColor="@color/black_30"
                        android:shadowDy="1"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/forgotPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoLink="web"
                android:shadowColor="@color/black"
                android:shadowDy="1"
                android:textColor="@color/login_bottom_font"
                android:text="@string/forgotPassWord"
                android:textSize="15sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
