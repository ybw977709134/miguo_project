<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <RelativeLayout 
        android:id="@+id/title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg">
        <ImageButton 
            android:id="@+id/title_back"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/nav_back_selector"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/offical_account"/>
    </RelativeLayout>
    <ScrollView 
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@+id/title_bar">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/newest_text"
                android:layout_height="30dp"
                android:layout_width="fill_parent"
                android:text="@string/newest_offical_id"/>
            <ListView 
                android:id="@+id/newest_list"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"/>
            <TextView 
                android:id="@+id/recomended_text"
                android:layout_height="30dp"
                android:layout_width="fill_parent"
                android:text="@string/offical_recommendations"/>
            <ListView 
                android:id="@+id/recomended_list"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>