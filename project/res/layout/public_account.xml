<?xml version="1.0" encoding="utf-8"?>
<co.onemeter.oneapp.ui.AntiResizeFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/background_dark">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_height="@dimen/title_bar_height"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/navbar_bg">
        <ImageButton
                android:id="@+id/title_back"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/nav_back_selector"/>
        <ImageButton
                android:id="@+id/title_more"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/nav_more_selector"/>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/public_account"/>
    </RelativeLayout>

    <ScrollView
            android:id="@+id/main_scroll_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/title_bar">
        <LinearLayout
                android:id="@+id/main_linear_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical">
            <include
                    android:id="@+id/search_bar"
                    layout="@layout/piece_filter_bar"/>
            <ListView
                    android:id="@+id/public_account_list"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:divider="@null"
                    android:cacheColorHint="@null"/>
        </LinearLayout>
    </ScrollView>

    <co.onemeter.oneapp.ui.SideBar
            android:id="@+id/side_bar"
            android:layout_below="@+id/title_bar"
            style="@style/side_index_bar"/>
</RelativeLayout>
</co.onemeter.oneapp.ui.AntiResizeFrameLayout>