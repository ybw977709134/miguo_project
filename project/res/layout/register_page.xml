<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/logo_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="@string/logo_name"/>

    <!--<ImageView-->
        <!--android:id="@+id/yuanqu_text"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:background="@drawable/yuanqu_text" />-->

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_view"
        android:layout_margin="14dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/account_edit"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_yuanqu_account"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/pwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_password"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/pwd_confirm_edit"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_password_again"
            android:imeOptions="actionDone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_selector"
            android:shadowColor="@color/white_80"
            android:shadowDy="1"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btn_blue_selector"
            android:shadowColor="@color/black_30"
            android:shadowDy="1"
            android:text="@string/create_account"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>
