<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">
    <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/navbar_bg">
        <ImageButton
                android:id="@+id/title_back"
                android:layout_height="@dimen/title_bar_height"
                android:layout_width="@dimen/title_bar_height"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/nav_back_selector"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/sys_notice_setting"
                style="@style/page_title"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_bar">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/def_sys_notice_setting_item_padding"
                android:orientation="vertical">
            <!-- all control -->
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_sys_notice_item_height"
                    android:layout_marginTop="@dimen/def_sys_notice_setting_item_padding"
                    android:paddingLeft="@dimen/def_sys_notice_setting_item_padding"
                    android:paddingRight="@dimen/def_sys_notice_setting_item_padding"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/sys_notice_enable_txt"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                <ImageView
                        android:id="@+id/iv_sys_notice_enable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"/>
            </RelativeLayout>

            <!-- space -->
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_sys_notice_setting_item_padding"
                    android:src="@color/transparent"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_sys_notice_setting_item_padding"
                    android:src="@color/transparent"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_sys_notice_setting_item_padding"
                    android:src="@color/transparent"/>

            <!-- music or vibrate-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/def_sys_notice_setting_item_padding"
                    android:text="@string/sys_notice_music_or_vibrate"
                    android:textColor="@color/gray"
                    android:textSize="13sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/def_sys_notice_setting_item_padding_0"
                    android:orientation="vertical"
                    android:background="@color/white">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/def_sys_notice_item_height"
                        android:paddingLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:paddingRight="@dimen/def_sys_notice_setting_item_padding">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sys_notice_music"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    <ImageView
                            android:id="@+id/iv_sys_notice_music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"/>
                </RelativeLayout>
                <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:background="@drawable/divider"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/def_sys_notice_item_height"
                        android:paddingLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:paddingRight="@dimen/def_sys_notice_setting_item_padding">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sys_notice_vibrate"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    <ImageView
                            android:id="@+id/iv_sys_notice_vibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- space -->
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_sys_notice_setting_item_padding"
                    android:src="@color/transparent"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_sys_notice_setting_item_padding"
                    android:src="@color/transparent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/def_sys_notice_setting_item_padding"
                    android:text="@string/sys_notice_contain"
                    android:textColor="@color/gray"
                    android:textSize="13sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/def_sys_notice_setting_item_padding_0"
                    android:orientation="vertical"
                    android:background="@color/white">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/def_sys_notice_item_height"
                        android:paddingLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:paddingRight="@dimen/def_sys_notice_setting_item_padding">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sys_notice_new_message"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    <ImageView
                            android:id="@+id/iv_sys_notice_new_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"/>
                </RelativeLayout>
                <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:background="@drawable/divider"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/def_sys_notice_item_height"
                        android:paddingLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:paddingRight="@dimen/def_sys_notice_setting_item_padding">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sys_notice_telephone"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    <ImageView
                            android:id="@+id/iv_sys_notice_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"/>
                </RelativeLayout>
                <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:background="@drawable/divider"
                        android:visibility="gone"/>
                <RelativeLayout
                        android:id="@+id/other_service_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/def_sys_notice_item_height"
                        android:paddingLeft="@dimen/def_sys_notice_setting_item_padding_2"
                        android:paddingRight="@dimen/def_sys_notice_setting_item_padding"
                        android:visibility="gone">
                    <TextView
                            android:id="@+id/tv_other_service_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sys_notice_others"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/table_arrow"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>