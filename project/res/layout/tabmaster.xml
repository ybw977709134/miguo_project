<?xml version="1.0" encoding="utf-8"?>
<co.onemeter.oneapp.ui.AntiResizeFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <TabHost 
        android:id="@android:id/tabhost"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_above="@+id/tab_bar"
                android:layout_alignParentTop="true">
            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/tab_bar"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/tabbar_bg"
                android:gravity="center|center_vertical|center_horizontal"
                android:orientation="horizontal" >
                
                <RelativeLayout 
                    android:id="@+id/tab_sms"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <ImageView 
                        android:id="@+id/tab_sms_image"
                        android:layout_height="40dp"
                        android:layout_width="44dp"
                        android:src="@drawable/tabbar_sms_a"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                            android:id="@+id/iv_center_horizontal_sms"
                            android:layout_height="match_parent"
                            android:layout_width="1dip"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/txt_unreadMsg"
                        android:layout_width="19dp"
                        android:layout_height="17dp"
                        android:layout_toRightOf="@id/iv_center_horizontal_sms"
                        android:background="@drawable/unread_count_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="invisible"
                        android:layout_marginTop="5dp"/>
	                <TextView
		                android:id="@+id/tab_sms_text"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
                        android:layout_below="@+id/tab_sms_image"
                        android:layout_centerHorizontal="true"
                        android:textSize="11sp"
                        android:text="@string/tab_sms"/>
                </RelativeLayout>

	            <RelativeLayout
		            android:id="@+id/tab_contact"
		            android:layout_width="0dp"
		            android:layout_height="fill_parent"
		            android:layout_weight="1" >
		            <ImageView
			            android:id="@+id/tab_contact_image"
			            android:layout_height="40dp"
			            android:layout_width="44dp"
			            android:layout_centerHorizontal="true"
			            android:src="@drawable/tabbar_contact"/>
		            <TextView
			            android:id="@+id/txt_pendingin_requests"
			            android:layout_width="10dp"
			            android:layout_height="10dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/indicator"
			            android:gravity="center"
			            android:textColor="@color/white"
			            android:textSize="10sp"
			            android:visibility="invisible"
			            android:layout_toRightOf="@+id/tab_contact_image"
			            android:layout_alignTop="@+id/tab_contact_image"
			            android:layout_marginTop="5dp"/>
		            <TextView
			            android:id="@+id/tab_contact_text"
			            android:layout_height="wrap_content"
			            android:layout_width="wrap_content"
                        android:layout_below="@+id/tab_contact_image"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:textSize="11sp"
                        android:text="@string/tab_contacts"/>
	            </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab_friend"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                    <ImageView 
                        android:id="@+id/tab_friend_image"
                        android:layout_height="40dp"
                        android:layout_width="44dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tabbar_feed"/>
                    <ImageView
                            android:id="@+id/iv_center_horizontal_friend"
                            android:layout_height="match_parent"
                            android:layout_width="1dip"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible"/>
	                <TextView
		                android:id="@+id/txt_friends_have_news"
		                android:layout_width="17dp"
		                android:layout_height="17dp"
                        android:layout_toRightOf="@id/iv_center_horizontal_friend"
                        android:background="@drawable/unread_count_bg"
		                android:gravity="center"
		                android:textColor="@color/white"
		                android:textSize="10sp"
		                android:visibility="invisible"
		                android:layout_marginTop="5dp"/>
	                <TextView
		                android:id="@+id/tab_friend_text"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
                        android:layout_below="@+id/tab_friend_image"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:textSize="11sp"
                        android:text="@string/tab_friends"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tab_event"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <ImageView 
                        android:id="@+id/tab_event_image"
                        android:layout_height="40dp"
                        android:layout_width="44dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView 
                        android:id="@+id/tab_event_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="11sp"
                        android:text="@string/tab_events"/>
                </LinearLayout>
                
                <RelativeLayout
                    android:id="@+id/tab_setting"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <ImageView 
                        android:id="@+id/tab_setting_image"
                        android:layout_height="40dp"
                        android:layout_width="44dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tabbar_settings"/>

                    <ImageView
                            android:id="@+id/iv_center_horizontal_setting"
                            android:layout_height="match_parent"
                            android:layout_width="1dip"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible"/>

	                <TextView
		                android:id="@+id/new_update"
		                android:layout_width="10dp"
		                android:layout_height="10dp"
                        android:layout_toRightOf="@id/iv_center_horizontal_setting"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/indicator"
		                android:gravity="center"

		                android:textColor="@color/white"
                        android:visibility="invisible"
		                android:textSize="10sp"

		                android:layout_alignParentTop="true"
		                android:layout_marginTop="5dp"/>
	                <TextView
		                android:id="@+id/tab_setting_text"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tab_setting_image"
                        android:textSize="11sp"
                        android:text="@string/tab_settings"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </TabHost>

</co.onemeter.oneapp.ui.AntiResizeFrameLayout>
