<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg_460" >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="@string/logo_name"
        android:layout_marginTop="30dp"/>
    <!--<ImageView -->
        <!--android:layout_height="40dp"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:background="@drawable/yuanqu_text"/>-->
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/table_black"
        android:orientation="vertical">
        <EditText 
        	android:id="@+id/input_text"
        	android:layout_height="46dp"
        	android:layout_width="fill_parent"
        	android:lines="1"
        	android:textCursorDrawable="@null"
        	android:background="@null"
        	android:paddingLeft="10dp"
        	android:paddingRight="10dp"
        	android:hint="@string/input_yuanqu_account"
        	android:textColor="@color/white"
        	android:textSize="17sp"/>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_divider_black"/>
        <LinearLayout
            android:layout_height="46dp"
            android:layout_width="fill_parent">
            <Button
                android:id="@+id/btn_mcc"
                android:layout_height="40dp"
                android:layout_width="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_medium_selector"/>
            <EditText
                android:id="@+id/mcc_text"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:background="@null"
                android:enabled="false"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_divider_black"/>
        <EditText 
            android:id="@+id/input_bind"
            android:layout_height="46dp"
            android:layout_width="fill_parent"
            android:lines="1"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/input_your_binds"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:minHeight="45dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_back"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_gray_medium_selector"
            android:textSize="17sp"
            android:textColor="@color/text_gray1"
            android:text="@string/back"/>
        <Button 
            android:id="@+id/btn_fetch"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btn_blue_medium_selector"
            android:shadowColor="@color/black_30"
            android:shadowDy="1"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="@string/withdraw_password"/>
    </LinearLayout>

</LinearLayout>
