<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_460"
    android:orientation="vertical" >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="@string/logo_name"/>
    <!--<ImageView -->
        <!--android:layout_height="40dp"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:background="@drawable/yuanqu_text"/>-->

    <EditText 
        android:id="@+id/edt_verification"
        android:layout_height="46dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:background="@drawable/table_black"
        android:hint="@string/input_auth_code"
        android:textColor="@color/white"
        android:textSize="17sp"/>
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/table_black"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/edt_pwd"
            android:layout_height="46dp"
            android:layout_width="fill_parent"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="@string/input_new_password"
            android:textSize="17sp"
            android:textColor="@color/white"/>
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_divider_black"/>
        <EditText 
            android:id="@+id/edt_confirm"
            android:layout_height="46dp"
            android:layout_width="fill_parent"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="@string/input_new_password_again"
            android:textSize="17sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_back"
            android:layout_height="45dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_gray_medium_selector"
            android:shadowColor="@color/white_80"
            android:shadowDy="1"
            android:textSize="17sp"
            android:textColor="@color/login_gray_btn_font"
            android:text="@string/back"/>
        <Button 
            android:id="@+id/btn_done"
            android:layout_height="45dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btn_blue_medium_selector"
            android:shadowColor="@color/black_30"
            android:shadowDy="1"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/done"/>
    </LinearLayout>
</LinearLayout>