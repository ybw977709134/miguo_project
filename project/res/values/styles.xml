	<style name="moment_user_name">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/event_blue</item>
	</style>

	<style name="moment_datetime">
		<item name="android:textColor">@color/default_subtext</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="moment_date">
		<item name="android:textColor">@color/default_subtext</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="moment_body">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/default_text</item>
		<item name="android:layout_marginTop">@dimen/padding_medium</item>
	</style>

	<style name="moment_listitem_outter_wrapper">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingTop">@dimen/padding_medium</item>
		<item name="android:orientation">vertical</item>
	</style>

    <style name="system_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/android_notification_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

	<style name="standard_text">
		<item name="android:textColor">@color/black</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
	</style>

	<style name="standard_text_darkgray">
		<item name="android:textColor">@color/text_darkgray</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
	</style>

	<style name="standard_text_gray">
		<item name="android:textColor">@color/text_gray</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
	</style>

	<style name="standard_list_item_with_arrow">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">@dimen/padding_medium</item>
		<item name="android:drawablePadding">@dimen/setting_txt_offset_to_icon</item>
		<item name="android:drawableRight">@drawable/table_arrow</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
		<item name="android:background">@drawable/btn_white_selector</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="standard_list_divider">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:background">@drawable/timeline_divider_h</item>
	</style>

	<style name="standard_radio_green" parent="standard_text">
		<item name="android:button">@drawable/radio_green</item>
	</style>

	<style name="horizontal_shadow">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">@drawable/shadow_under</item>
	</style>

    <!-- 活动列表页面中，显示活动的一个字段的文本样式 -->
    <style name="event_field_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_tiny</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <!-- 活动详情页面中，显示活动的一个字段的文本样式 -->
    <style name="event_field_large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_medium</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="event_section_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/text_gray4</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/text_gray2</item>
    </style>

</resources>